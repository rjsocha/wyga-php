ARG WYGA_VERSION
ARG IMAGE
FROM ${IMAGE} AS base
 
FROM scratch
ARG WYGA_VERSION
COPY --from=base / /
ENV PHP_INI_DIR=/usr/local/etc/php
ENV PHP_VERSION=${WYGA_VERSION}
ENV WYGA_VERSION=${WYGA_VERSION}
WORKDIR /var/www/html
STOPSIGNAL SIGQUIT
EXPOSE 9000
CMD ["php-fpm"]
ENTRYPOINT ["docker-php-entrypoint"]
