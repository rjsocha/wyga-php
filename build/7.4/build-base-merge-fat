#!/bin/bash
set -eu
WYGA_VERSION="${WYGA_VERSION:-none}"
if [[ "${WYGA_VERSION}" == "none" ]]
then
	echo "do not run this script directly!"
	exit 1
fi
REGISTRY="${REGISTRY}-merge"
echo "Build base: ${REGISTRY}:${BASE}-fat"
docker build -t "${REGISTRY}:${BASE}-fat" --build-arg WYGA_VERSION=${WYGA_VERSION} -f ../Dockerfile.7.4.base-merge-fat ../../context/empty/

for _tag in ${BASE_TAG_AS}
do
	echo "TAG as ${REGISTRY}:${_tag}-fat"
	docker tag "${REGISTRY}:${BASE}-fat" ${REGISTRY}:${_tag}-fat
done
