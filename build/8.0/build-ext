#!/bin/bash
set -eu
WYGA_VERSION="${WYGA_VERSION:-none}"
if [[ "${WYGA_VERSION}" == "none" ]]
then
	echo "do not run this script directly!"
	exit 1
fi
echo "Build local extension image: ${LOCAL_BUILD_EXT}"
docker build -t "${LOCAL_BUILD_EXT}" --build-arg WYGA_VERSION=${WYGA_VERSION} --no-cache --pull -f ../Dockerfile.8.0.ext ../../context/ext/build/
